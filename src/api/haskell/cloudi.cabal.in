name:                cloudi
version:             @VERSION@
synopsis:            Haskell CloudI API
description:         Haskell CloudI API
homepage:            https://github.com/CloudI/cloudi_api_haskell
license:             BSD4
license-file:        ../../LICENSE
author:              Michael Truog
maintainer:          mjtruog@gmail.com
copyright:           2017 Michael Truog
category:            Foreign
stability:           provisional
build-type:          Simple
cabal-version:       >= 1.22

library
  hs-source-dirs:    src
  exposed-modules:     Foreign.CloudI
                     , Foreign.Erlang
                     , Foreign.Erlang.Pid
                     , Foreign.Erlang.Port
                     , Foreign.Erlang.Reference
                     , Foreign.Erlang.Function
  other-modules:       Foreign.CloudI.Instance
  ghc-options:       -Wall -Werror -funbox-strict-fields -threaded
  build-depends:       base >= 4.8.2.0
                     , binary >= 0.8.4.0
                     , bytestring >= 0.10.4
                     , array
                     , containers
                     , network
                     , time
                     , unix
                     , zlib
  default-language:  Haskell2010

