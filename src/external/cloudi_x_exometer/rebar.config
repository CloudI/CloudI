%% -*- erlang -*-
{erl_first_files,
 [
  "EXOMETER-MIB.mib"
 ]}.

{erl_opts,
 [
  debug_info,
  {d, 'HUT_CUSTOM'},
  {d, 'HUT_CUSTOM_CB', 'cloudi_logger_hut'},
  fail_on_warning,
  {verbosity, trace}
 ]}.

{xref_checks,
 [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_functions_calls,
  deprecated_functions
 ]}.

{cover_enabled, true}.
{cover_print_enabled, true}.

{clean_files, ["test/app1/ebin/*.beam"]}.

{ct_use_short_names, true}.
