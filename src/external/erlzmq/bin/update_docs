#!/bin/bash -e
FILE=$(readlink -f $0)
DIR=${FILE%/*}
DIR=${DIR%/*}
cd $DIR

#trap "git co master" EXIT

git checkout gh-pages
git checkout master src vsn.mk
cd src
make docs
cd ..
git rm -fr src vsn.mk
mv doc/* .
rmdir doc

ret=0

set +e
if git commit -a ; then
    git push origin
else
    ret=1
    git reset --hard
fi
set -e

git co master

exit $ret
